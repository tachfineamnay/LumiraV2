{{!--
Reading Template - Oracle Lumira Spiritual Reading PDF

Data structure:
- userName: string
- archetype: string
- archetypeDescription: string
- introduction: string
- sections: { domain, title, content }[]
- karmicInsights: string[]
- lifeMission: string
- rituals: { name, description, instructions[] }[]
- conclusion: string
- birthData: { date, time?, place? }
- generatedAt: string
--}}

{{!-- Archetype Reveal Box --}}
<div class="archetype-box">
    <h3>Votre Arch√©type Spirituel</h3>
    <p class="archetype-name">{{archetype}}</p>
    {{#if archetypeDescription}}
    <p>{{archetypeDescription}}</p>
    {{/if}}
</div>

{{!-- Introduction --}}
<section class="section">
    <h2>‚ú® Bienvenue, {{userName}}</h2>
    <p>{{introduction}}</p>
</section>

{{!-- Life Domains Sections --}}
{{#each sections}}
<section class="section">
    <h2>{{domainIcon domain}} {{title}}</h2>
    <p>{{content}}</p>
</section>
{{/each}}

{{!-- Page break before insights --}}
<div class="page-break"></div>

{{!-- Karmic Insights --}}
<section class="section">
    <h2>üîÆ R√©v√©lations Karmiques</h2>
    <ul class="insights-list">
        {{#each karmicInsights}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
</section>

{{!-- Life Mission --}}
<section class="section">
    <h2>üåü Votre Mission de Vie</h2>
    <p>{{lifeMission}}</p>
</section>

{{!-- Rituals --}}
{{#if rituals.length}}
<section class="section">
    <h2>üïØÔ∏è Rituels Personnalis√©s</h2>

    {{#each rituals}}
    <div class="ritual">
        <h4>{{name}}</h4>
        <p>{{description}}</p>
        {{#if instructions.length}}
        <ol class="ritual-steps">
            {{#each instructions}}
            <li>{{this}}</li>
            {{/each}}
        </ol>
        {{/if}}
    </div>
    {{/each}}
</section>
{{/if}}

{{!-- Conclusion --}}
<section class="section">
    <h2>üí´ Message Final</h2>
    <p>{{conclusion}}</p>
</section>

{{!-- Birth Data Footer --}}
<section class="section birth-data">
    <h2>üìç Donn√©es de Naissance</h2>
    <p>
        <strong>Date :</strong> {{birthData.date}}<br>
        {{#if birthData.time}}<strong>Heure :</strong> {{birthData.time}}<br>{{/if}}
        {{#if birthData.place}}<strong>Lieu :</strong> {{birthData.place}}{{/if}}
    </p>
    <p class="generated-at">
        <em>Lecture g√©n√©r√©e le {{formatDate generatedAt}}</em>
    </p>
</section>

<style>
    .insights-list {
        list-style: none;
        padding-left: 0;
    }

    .insights-list li {
        padding: 10px 15px;
        margin: 10px 0;
        background: rgba(201, 169, 98, 0.1);
        border-left: 3px solid #c9a962;
    }

    .ritual {
        background: #fff;
        border: 1px solid #e2d9c8;
        border-left: 4px solid #c9a962;
        padding: 20px;
        margin: 20px 0;
        border-radius: 0 8px 8px 0;
    }

    .ritual h4 {
        color: #1a202c;
        margin: 0 0 10px 0;
        font-size: 14pt;
    }

    .ritual-steps {
        margin-left: 20px;
        color: #4a5568;
    }

    .ritual-steps li {
        margin-bottom: 8px;
    }

    .birth-data {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 2px solid #e2d9c8;
    }

    .generated-at {
        color: #718096;
        font-size: 10pt;
        margin-top: 20px;
    }
</style>