  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@packages/database": [
        "../../packages/database/dist"
      ],
      "@packages/shared": [
        "../../packages/shared/dist"
      ],
      "@packages/config/*": [
